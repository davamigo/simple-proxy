{
    "name": "davamigo/simple-proxy",

    "description": "A simple PHP proxy server which acts as intermediary for HTTP requests to get resources from a external server hiding the client",

    "type": "project",

    "version": "1.0.0",

    "keywords": [
        "http",
        "proxy"
    ],

    "license": "MIT",

    "authors": [{
        "name": "David Amigo",
        "email": "davamigo@gmail.com",
        "role": "lead"
    }],

    "support": {
        "email": "davamigo@gmail.com",
        "source": "https://github.com/davamigo/simple-proxy"
    },

    "require": {
        "php": ">=5.3.3",
        "davamigo/simple-http-client": "~1",
        "symfony/http-foundation": "~2"
    },

    "require-dev": {
        "phpunit/phpunit": "~4"
    },

    "config": {
        "bin-dir": "bin/",
        "platform": {
            "php": "5.3.3"
        }
    },

    "autoload": {
        "psr-4": {
            "Davamigo\\": "src/",
            "Test\\": "test/"
        }
    },

    "repositories": [{
        "type": "vcs",
        "url":  "git@github.com:davamigo/simple-http-client.git"
    }]
}
